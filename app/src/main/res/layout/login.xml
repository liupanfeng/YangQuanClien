<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
   >

    <com.meishe.yangquan.wiget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="48dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_phonenumber"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/login_shape"
            android:gravity="center_vertical"
            android:hint="输入手机号码"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="13dp"
            android:textColor="#000000"
            android:textColorHint="#D4D4D4"
            android:textSize="17sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_checkcode"
                android:layout_width="175dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/login_shape"
                android:gravity="center_vertical"
                android:hint="输入短信验证码"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="13dp"
                android:textColor="#000000"
                android:textColorHint="#D4D4D4"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/getcheckcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/main_color_shape"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/login_yellow_shape"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="21sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录即同意"
                    android:textColor="#D4D4D4"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/user_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    android:text="用户协议"
                    android:textColor="#FFCC00"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="和"
                    android:textColor="#D4D4D4"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="隐私政策"
                    android:textColor="#FFCC00"
                    android:textSize="11sp" />

            </LinearLayout>



            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/login_yellow_shape"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="新用户注册"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

    <com.meishe.yangquan.wiget.MaterialProgress
        android:id="@+id/loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true" />


</RelativeLayout>