<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="175dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/login_shape"
                android:gravity="center_vertical"
                android:hint="输入短信验证码"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="13dp"
                android:textColor="#000000"
                android:textColorHint="#D4D4D4"
                android:textSize="17sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/main_color_shape"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/login_yellow_shape"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="21sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/login_yellow_shape"
                android:text="新用户注册"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录即同意"
                    android:textColor="#D4D4D4"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    android:text="用户协议"
                    android:textColor="#FFCC00"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="和"
                    android:textColor="#D4D4D4"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="隐私政策"
                    android:textColor="#FFCC00"
                    android:textSize="11sp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_top_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp70">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:background="@mipmap/icon_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:text="LOGO"
                android:layout_gravity="center"
                android:textColor="#ff3ba786"
                android:textSize="@dimen/sp24" />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_phone_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_below="@+id/civ_change_identity"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginTop="@dimen/dp50"
        android:layout_marginRight="@dimen/dp50">

        <TextView
            android:id="@+id/tv_86"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textColor="#ff090723"
            android:textSize="@dimen/sp17" />

        <View
            android:id="@+id/view_vertical_line"
            android:layout_toRightOf="@+id/tv_86"
            android:layout_width="@dimen/dp0p3"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginBottom="@dimen/dp17"
            android:background="#C2C2C2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0p3"
            android:layout_alignParentBottom="true"
            android:background="#C2C2C2" />

        <EditText
            android:id="@+id/input_phonenumber"
            android:layout_toRightOf="@+id/view_vertical_line"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/login_shape"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp17"
            android:hint="输入手机号码"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#000000"
            android:textColorHint="#D4D4D4"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_verification_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_below="@+id/rl_phone_number"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginRight="@dimen/dp50">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0p3"
            android:layout_alignParentBottom="true"
            android:background="#C2C2C2" />

        <EditText
            android:id="@+id/et_image_code"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/login_shape"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp17"
            android:hint="请输入图形码"
            android:maxLines="1"
            android:textColor="#000000"
            android:textColorHint="#D4D4D4"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_verification"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp8"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_phone_number_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_below="@+id/rl_verification_code"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginRight="@dimen/dp50">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0p3"
            android:layout_alignParentBottom="true"
            android:background="#C2C2C2" />

        <EditText
            android:id="@+id/input_checkcode"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/login_shape"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp17"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#000000"
            android:textColorHint="#D4D4D4"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/getcheckcode"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="获取验证码"
            android:textColor="#ff3ba786"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


    <com.meishe.yangquan.view.NbButton
        android:id="@+id/btn_login"
        android:layout_below="@+id/rl_phone_number_code"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginRight="@dimen/dp50"
        android:layout_marginTop="@dimen/dp40"
        android:textColor="@color/white"
        android:text="登陆"
        />


    <TextView
        android:id="@+id/tv_login_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  -  其它方式登录  -"
        android:textColor="#ffc2c2c2"
        android:textSize="15sp"
        android:layout_below="@+id/btn_login"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp60"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:id="@+id/rl_login_type"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_login_type"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp30"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/iv_we_chat"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/icon_login_we_chat"
            />

        <Button
            android:id="@+id/iv_qq"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_marginLeft="@dimen/dp100"
            android:layout_toRightOf="@+id/iv_we_chat"
            android:background="@mipmap/icon_login_qq"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即表示您已阅读并同意"
            android:textColor="#D4D4D4"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:text="用户隐私协议"
            android:textColor="#656B73"
            android:textSize="11sp" />

    </LinearLayout>

    <com.meishe.yangquan.view.ChangeIdentityView
        android:id="@+id/civ_change_identity"
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/dp33"
        android:layout_below="@+id/rl_top_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp130" />

    <com.meishe.yangquan.wiget.MaterialProgress
        android:id="@+id/loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true" />


</RelativeLayout>