<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.meishe.yangquan.activity.VersionUpdateActivity">

    <include layout="@layout/custom_toolbar_layout" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_photo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.meishe.yangquan.wiget.CustomRoundView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27.5dp"
                app:corner_radius="40dp">

                <com.meishe.yangquan.view.CircleImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/ic_little_sheep"
                    android:scaleType="centerCrop"
                    />

            </com.meishe.yangquan.wiget.CustomRoundView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.5dp"
                android:text="点击更改头像"
                android:textColor="#ff858585"
                android:textSize="14sp" />


            <RelativeLayout
                android:id="@+id/rl_nickname"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_nickname"
                    style="@style/pref_unit_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="昵称"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

                <ImageView
                    android:id="@+id/iv_nickname"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dip"
                    android:background="@drawable/right_arrow_selector"/>

                <TextView
                    android:id="@+id/tv_nickname_content"
                    style="@style/pref_item_inner_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_nickname"
                    android:layout_marginRight="13dip"
                    android:text="牧羊人"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_phone_number"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_phone_number"
                    style="@style/pref_unit_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

                <ImageView
                    android:id="@+id/iv_phone_number"
                    android:layout_height="15dip"
                    android:layout_width="8dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dip"
                    android:background="@drawable/right_arrow_selector"/>

                <TextView
                    android:id="@+id/tv_phone_number_content"
                    style="@style/pref_item_inner_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_phone_number"
                    android:layout_marginRight="13dip"
                    android:text="18810765555"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/pref_unit_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="地址"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_height="15dip"
                    android:layout_width="8dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dip"
                    android:background="@drawable/right_arrow_selector"/>

                <TextView
                    android:id="@+id/tv_address_content"
                    style="@style/pref_item_inner_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_address"
                    android:layout_marginRight="13dip"
                    android:text="北京市 海淀区"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="营业执照"
                android:textColor="#ff383838"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/ic_upload_pic"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请上传营业执照"
                android:textColor="#ffe5e5e5"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆信息"
                android:textColor="#ff383838"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/ic_upload_pic"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请上传车辆照片"
                android:textColor="#ffe5e5e5"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>




</LinearLayout>
