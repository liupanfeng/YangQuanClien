<?xml version="1.0" encoding="utf-8"?>
<com.meishe.yangquan.wiget.CustomRoundView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:background="@color/white"
    app:corner_radius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_service_sheep_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="东北羊"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_service_sheep_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="4dp"
                        android:text="30.5/斤"
                        android:textColor="@color/red"
                        android:textSize="16sp" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_service_sheep_price"
                    android:singleLine="true"
                    android:text="备注:120斤一只，胖瘦均匀……"
                    android:textColor="@color/text_content_color"
                    android:textSize="14sp" />

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_check_history"
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:background="@drawable/service_mine_color_shape"
            android:text="查看历史"
            android:textColor="@color/white" />


    </RelativeLayout>

</com.meishe.yangquan.wiget.CustomRoundView>