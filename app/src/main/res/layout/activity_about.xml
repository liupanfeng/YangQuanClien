<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AboutActivity">

    <include layout="@layout/custom_toolbar_layout" />

    <com.meishe.yangquan.view.RoundAngleImageView
        android:id="@+id/iv_logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:background="@mipmap/logo"
        android:layout_gravity="center_horizontal"
        app:roundWidth="5dp"
        app:roundHeight="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For android V1.0"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff858585"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_width="123dp"
        android:layout_height="122dp"
        android:background="@mipmap/ic_contact_us"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫描二维码，您的朋友也可以下载羊圈"
        android:textColor="#ff858585"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        />
    <RelativeLayout
        android:id="@+id/rl_user_agreement"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_user_agreement"
            style="@style/pref_unit_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="用户协议"

            android:gravity="left"
            android:textSize="15sp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <ImageView
            android:id="@+id/iv_user_agreement"
            android:layout_height="15dip"
            android:layout_width="8dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dip"
            android:background="@drawable/right_arrow_selector"/>

        <TextView
            android:id="@+id/tv_user_agreement_content"
            style="@style/pref_item_inner_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_user_agreement"
            android:layout_marginRight="13dip"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:textSize="12sp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_privacy_policy"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_privacy_policy"
            style="@style/pref_unit_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="隐私政策"

            android:gravity="left"
            android:textSize="15sp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <ImageView
            android:id="@+id/iv_privacy_policy"
            android:layout_height="15dip"
            android:layout_width="8dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dip"
            android:background="@drawable/right_arrow_selector"/>

        <TextView
            android:id="@+id/tv_privacy_policy_content"
            style="@style/pref_item_inner_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_privacy_policy"
            android:layout_marginRight="13dip"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:textSize="12sp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </RelativeLayout>


</LinearLayout>