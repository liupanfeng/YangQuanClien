<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PublishMarketActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp18"
                android:background="@mipmap/ic_title_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="个人信息"
                android:textColor="#ff303030"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btn_publish"
                android:layout_width="@dimen/dp53"
                android:layout_height="@dimen/dp27"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp18"
                android:background="@drawable/mine_gold_button_bg"
                android:text="发布"
                android:textColor="@color/white" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp8"
            android:background="#fff5f5f5" />


        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="标题"
                android:textColor="#ff303030"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_market_input_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:background="@null"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:gravity="end"
                android:hint="请输入标题"
                android:textColorHint="#ffc2c2c2"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_variety"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="品种"
                android:textColor="#ff303030"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_market_input_variety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:background="@null"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:gravity="end"
                android:hint="请输入品种"
                android:textColorHint="#ffc2c2c2"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_weight"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="重量"
                android:textColor="#ff303030"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_market_input_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:background="@null"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:gravity="end"
                android:hint="请输入重量"
                android:textColorHint="#ffc2c2c2"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_amount"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="数量"
                android:textColor="#ff303030"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_market_input_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:background="@null"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:gravity="end"
                android:hint="请输入数量"
                android:textColorHint="#ffc2c2c2"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_price"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="价格"
                android:textColor="#ff303030"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_market_input_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:background="@null"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:gravity="end"
                android:hint="请输入价格元/只"
                android:textColorHint="#ffc2c2c2"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_phone_number"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="电话"
                android:textColor="#ff303030"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_market_input_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:background="@null"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:gravity="end"
                android:hint="请输入电话"
                android:textColorHint="#ffc2c2c2"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp17"
            android:text="上传照片"
            android:textColor="#ff303030"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_sheep_market_publish"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp15"
            android:background="@mipmap/ic_publish_service_add_picture"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp10" />

    </LinearLayout>


    <include layout="@layout/layout_loading" />


</RelativeLayout>