<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_cut_sheep_hair_open"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp38"
        android:layout_marginTop="@dimen/dp20"
        android:background="@mipmap/ic_sheep_message_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="剪毛记录"
                android:textColor="#ff656565"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp6"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp8"
                android:background="@mipmap/ic_sheep_down" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_cut_sheep_hair_close"
        android:layout_width="match_parent"
        android:background="@drawable/sheep_breed_base_massage_top_bg"
        android:layout_marginTop="@dimen/dp20"
        android:layout_height="@dimen/dp36">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剪毛记录"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                />
            <ImageView
                android:layout_width="@dimen/dp11"
                android:layout_height="7.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.3dp"
                android:background="@mipmap/ic_sheep_breed_up"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_cut_sheep_hair_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="21dp"
            android:layout_height="@dimen/dp38">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="时间"
                android:layout_weight="1"
                android:textColor="#ff303030"
                android:gravity="center"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="数量"
                android:layout_weight="1"
                android:textColor="#ff303030"
                android:gravity="center"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="单价（元）"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="#ff303030"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="总价（元）"
                android:gravity="center"
                android:textColor="#ff303030"
                android:textSize="13sp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_cut_hair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp38">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="合计："
                android:textColor="@color/color_fffa561e"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="--"
                android:layout_weight="1"
                android:textColor="#ff303030"
                android:gravity="center"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="--"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="#ff303030"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/tv_hair_total_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#ff303030"
                android:textSize="13sp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_create_cut_hair"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp20"
            android:background="@mipmap/ic_sheep_create_bg"
            >

            <ImageView
                android:layout_width="@dimen/dp14"
                android:layout_height="@dimen/dp14"
                android:background="@mipmap/ic_sheep_add"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp15"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增一条"
                android:textColor="#ff656565"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                />

        </LinearLayout>

    </LinearLayout>

</merge>