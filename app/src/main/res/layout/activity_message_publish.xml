<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.meishe.yangquan.activity.VersionUpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff5f5f5"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar_layout" />

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="标题"
                android:textColor="#ff303030"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_service_input_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:hint="请输入标题"
                android:textColorHint="#ffc2c2c2"
                android:background="@null"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_breed"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="品种"
                android:textColor="#ff303030"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_service_input_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:hint="请输入品种"
                android:textColorHint="#ffc2c2c2"
                android:background="@null"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_weight"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="重量"
                android:textColor="#ff303030"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_service_input_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:hint="请输入重量"
                android:textColorHint="#ffc2c2c2"
                android:background="@null"
                android:textSize="13sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_number"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="数量"
                android:textColor="#ff303030"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_service_input_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:hint="请输入数量"
                android:textColorHint="#ffc2c2c2"
                android:background="@null"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_price"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="价格"
                android:textColor="#ff303030"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/et_service_input_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:hint="请输入价格"
                android:textColorHint="#ffc2c2c2"
                android:background="@null"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_phone_number"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:text="电话"
                android:textColor="#ff303030"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_service_input_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp32"
                android:drawableRight="@mipmap/right_arrow_normal"
                android:drawablePadding="6dp"
                android:hint="请输入电话"
                android:textColorHint="#ffc2c2c2"
                android:background="@null"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0p3"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />
        </RelativeLayout>

        <TextView
            android:layout_width="53dp"
            android:layout_height="19dp"
            android:text="上传照片"
            android:textColor="#ff303030"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp17"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <com.meishe.yangquan.wiget.MaterialProgress
        android:id="@+id/mp_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true" />

</RelativeLayout>
