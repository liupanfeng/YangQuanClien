<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_middle_container_one_goods"
    android:layout_marginTop="@dimen/dp10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <com.meishe.yangquan.view.RoundAngleImageView
            android:id="@+id/riv_goods_cover"
            android:layout_width="78dp"
            android:background="@mipmap/ic_bu_goods_cover"
            app:roundWidth="@dimen/dp3"
            app:roundHeight="@dimen/dp3"
            android:layout_marginLeft="@dimen/dp22"
            android:layout_height="78dp"/>

        <TextView
            android:id="@+id/tv_good_title"
            android:layout_toRightOf="@+id/riv_goods_cover"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="英美尔"
            android:textColor="#ff303030"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/riv_goods_cover"
            android:layout_alignBottom="@+id/riv_goods_cover"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp18"
            android:text="￥70"
            android:textColor="#ff303030"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_goods_amount"
            android:layout_alignBottom="@+id/tv_goods_price"
            android:layout_toRightOf="@+id/tv_goods_price"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="数量：3"
            android:textColor="#ff303030"
            android:textSize="13sp"
            />

</RelativeLayout>