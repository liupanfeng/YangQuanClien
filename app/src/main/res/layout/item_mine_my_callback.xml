<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:orientation="vertical">

    <com.meishe.yangquan.view.RoundAngleImageView
        android:id="@+id/iv_callback_message"
        android:layout_width="@dimen/dp36"
        android:layout_height="@dimen/dp36"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp20"
        app:roundHeight="@dimen/dp18"
        app:roundWidth="@dimen/dp18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_callback_message"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_callback_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户XXX"
            android:textColor="@color/color_ff2f3742"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_callback_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX回复了您"
            android:textColor="@color/color_ff656565"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="@dimen/dp20"
        android:text="2020-10-10"
        android:textColor="#ff656565"
        android:textSize="13sp" />


</RelativeLayout>