<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/service_white_shape">

        <RelativeLayout
            android:id="@+id/rl_top_part"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_top_part"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ic_service_type_chedui" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_top_part"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_top_part"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="远大车队" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/ic_service_type_jianyangmao" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_mine_color_shape"
                android:text="马上预约"
                android:textColor="@color/white" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_service_type_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top_part"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="车队服务，车队服务车队服务，车队服务车队服务，车队服务车队服务，车队服务……" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/iv_service_zan"
                android:layout_alignParentBottom="true"
                android:text="赞"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_content_color"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_service_zan"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_service_zan" />

    </RelativeLayout>


</LinearLayout>