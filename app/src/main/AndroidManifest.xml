<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meishe.yangquan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoTitleStyle">
        <activity android:name=".activity.MessagePublishActivity"></activity>
        <activity android:name=".activity.ContactUsActivity" />
        <activity android:name=".activity.VersionUpdateActivity" />
        <activity android:name=".activity.BusinessOpportunityActivity" />
        <activity android:name=".activity.MessageCenterActivity" />
        <activity android:name=".activity.PerfectInformationActivity" />
        <activity android:name=".activity.ServiceTypeListActivity" />
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/NoTitleStyle" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/NoTitleStyle" />
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/StartTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleStyle" />
    </application>

</manifest>